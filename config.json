{
  "mqtt": {
    "broker": "broker.hivemq.com",
    "protocol": "mqtt",
    "userName": "",
    "password": "",
    "clientId": "conectric-gateway-XXXXX"
  },
  "sensorMessages": {
    "boot": {
      "enabled": true,
      "mqttTopic": "/conectric/boot"
    },
    "keepAlive": {
      "enabled": false,
      "mqttTopic": "/conectric/keepAlive"
    },
    "motion": {
      "enabled": true,
      "mqttTopic": "/conectric/motion"
    },
    "motionStatus": {
      "enabled": true,
      "mqttTopic": "/conectric/motionStatus"
    },
    "tempHumidity": {
      "enabled": true,
        "mqttTopic": "/conectric/tempHumidity",
        "useFahrenheitTemps": true
    },
    "switch": {
      "enabled": true,
      "mqttTopic": "/conectric/switch",
      "switchOpenValue": false
    },
    "switchStatus": {
      "enabled": true,
      "mqttTopic": "/conectric/switchStatus"
    }
  }
}